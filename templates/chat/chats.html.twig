{% extends 'base.html.twig' %}

{% block title %}My Chats{% endblock %}

{% block body %}
    <h1>My Chats</h1>

    <main class="chats">
        <aside>
            <ul>
                {% for chat in chats %}
                    <li class="notif2">
                        <a href="{{ path('app_chat_view', {'id': chat.id}) }}">
                            {% for user in chat.users %}
                                {% if user.id != app.user.id %}
                                    <img src="{{ asset('images/moi.jpg') }}">
                                    {{ user }}
                                {% endif %}
                            {% endfor %}
                        </a>
                        {# <span>{{ chat.getUnreadMessagesCount(app.user) }}</span> #}
                    </li>
                {% endfor %}
            </ul>
        </aside>
        <section>
            <p>Select a chat to see the messages</p>
        </section>
    </main>
    <style>
        main.chats {
            height: 50vh;
            display: flex;
            width: 90%;
        }

        main.chats section p {
            text-align: center;
            margin-top: 100px;
            opacity: 0.5;
        }

        main.chats aside {
            width: 300px;
            border: 1px solid #cccccc49;
            height: 100%;
        }

        main.chats aside ul li a {
            border-bottom: 1px solid #cccccc49;
            padding: 15px;
            text-decoration: none;
            width: 100%;
        }

        main.chats aside ul li a:hover {
            background-color: #88888813;
        }

        main.chats section {
            width: 700px;
            border: 1px solid #cccccc49;
            height: 100%;
        }

        .notif2 {
            display: flex;
            gap: 10px;
        }

        .notif2 img {
            height: 50px;
            width: 50px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 10px;
        }

        .notif2 span {
            height: 20px;
            width: 20px;
            background-color: red;
            color: white;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 12px;
        }
    </style>
{% endblock %}